<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Reglas</th>
      <th>Componentes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= image_tag(game.photo.variant(resize:'100x100', colorspace:'Gray')) %></td>
        <td><%= game.name %></td>
        <td><%= link_to game.rule.desc, rails_blob_path(game.rule.rules, disposition:'attachment' )%></td>
        <td><%= link_to game.component.desc, rails_blob_path(game.component.photo, disposition:'attachment') %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
